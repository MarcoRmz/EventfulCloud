<div class="right_panel">

  <div class="outer">
    <h1 style="text-align: center; margin-right: 20%;">Schedule</h1>
    <p>
      <% for(var i=0; i<image.get('schedule').length; i++) {%>
        <p style="text-align: center; margin-right: 20%;"><%= image.get('schedule')[i] %></p>
      <% } %>
    </p>

    <form class="login_right" method="post" action="/i/add_schedule_item/<%= image.id %>" style="text-align: center;">
      <div class="outer" align="center">
          <h2 style="text-align: center;">Add Item</h2>
          <input style="background-color: #fff; border: 1px solid #c5bdbd;" type="text" name="schedule" placeholder="9:00am Registration">
          <input style="font-family: 'Maven Pro', sans-serif; cursor:pointer; background: #242424; border: 1px solid #242424; padding: 10px 20px;
    outline:none; color: #ffffff; font-size: 1em; border-radius: 2px; -webkit-border-radius: 2px; -moz-border-radius: 2px; -o-border-radius: 2px;" type="submit" value="Add" >
      </div>
    </form>
  </div>
  
</div>

<div class="image_container">
  <div class="outer">
    <h1><%= image.title() %></h1>
    <p style="text-align: left;"> Date:</p> <p style="text-align: left;"> <%= image.get('startDate') %> - <%= image.get('endDate') %></p>
    <br>
    <p style="text-align: left;">Description:</p> <p style="text-align: left;"><%= image.get('descr') %></p>
    <br>
    <p style="text-align: left;">Contact:</p> <p style="text-align: left;"><%= image.get('email') %></p>
    <br>
    <div class="image">
      <a href="<%= image.get('sizeOriginal').url() %>">
        <img src="<%= image.get(size).url() %>" />
      </a>
    </div>
  </div>
</div>

<script>
  $("input").click(function(e) {
    var el = $(e.target);
    el.select();
  });
</script>
